<div class="container">
  <div class="row offset-2">
      <form class="clearfix mb-4 w-100" id="transForm" action="POST">

        <div class="form-group col-md-6">
          <label for="stock">Find Stock</label>
          <input type="text" id="ticker" class="form-control" aria-describedby="stock-search" placeholder="Search by ticker symbol">
        </div>
        <div class="form-group col-md-4">
          <label for="quantity">Quantity</label>
          <input class="form-control" type="number" id="quantity" aria-describedby="stock-quantity" placeholder="Enter a quantity">
        </div>
        <button id="submit" class="btn btn-primary float-left">Submit</button>
      </form>
  </div>
</div>

<script src="/js/transaction.js"></script>
