<div class="container">
<form id="stockSearch">
    <input type="text" id="ticker">
    <button type="submit">Submit</button>

</form>
<div class="row allinfo">
    <div class="col-lg-7 stockchart">
        <div class="row">
        <h2><span id="tickername"></span></h2>
        <h2>Change Today: <span class="change"></span></h2>
        <canvas id="myChart" width="100%" height="50%"></canvas>
        </div>
        <div class="row stats">
            <div class="col-md-6">
                <p>52 Week High: <span class="52weekh"></span></p>
                <p>52 Week Low: <span class="52weekl"></span></p>
            </div>
            <div class="col-md-6">
                <p>Market Cap: <span class="marketcap"></span></p>
                <p>P/E Ratio: <span class="peratio"></span></p>
            </div>
        </div>
    </div>
    <div class="col-lg-4 news">
        <h2 class="newsheader">News</h2>
    </div>

</div>
</div>
<script src="/js/stock.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>