        {{!-- Creating Dashboard Content --}}
        <div id="dash-content">
            <div id="dash-content-header">
                <h1>Dashboard</h1>
            </div>
            <div id="portfolio">
                <h3>{{msg}}, {{name}}</h3>
            </div>
            {{!-- Current Stock Table --}}
            <table class="widget-box" id="stock-table">
                <thead>
                    <tr>
                        <th>Current Stocks</th>
                        <th>Quantity</th>
                        <th>Gain/Loss</th>
                        <th>Total Price</th>
                    </tr>
                </thead>
                <tbody>
                        {{#each stock}}
                            {{> stocks}}
                        {{/each}}
                </tbody>
            </table>

            <div class="card" id="dash-card" style="width: 18rem;">
                <ul class="list-group list-group-flush">
                    <div class="card-border">
                    <li class="list-group-item">Net Worth: ${{total}}</li>
                    <li class="list-group-item">Available Cash: ${{available}}</li>
                    </div>
                    <li>               <form class="stocksearch">
                            <input type="text" class="form-control" id="tickersearch" size="10" maxlength="4">
                            <button type="submit" class="btn btn-primary" id="searchstockbutton">Search Stock</button>
                        </form></li>
                </ul>
            </div>
        </div>
        
    </div>
