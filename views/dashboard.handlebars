<div id="main-container">
    <div id="dash-container">
        {{!-- Creating Sidebar --}}
        <section id="sidebar">
            <div class="white-label">
            </div>
            <div id="sidebar-nav">
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Dashboard</a></li>
                    <li><a href="#">News</a></li>
                    <li><form class="stocksearch"><input type="text" id="tickersearch" size="5" maxlength="4">
                    <button type="submit" id="searchstockbutton">Submit</button></form></li>
                </ul>
            </div>
        </section>
        {{!-- Creating Dashboard Content --}}
        <div id="dash-content">
            <div id="dash-content-header">
                <h1>Dashboard</h1>
            </div>
            <div id="portfolio">
                <h3>{{msg}} {{name}}!</h3>
            </div>
            {{!-- Current Stock Table --}}
            <table class="widget-box" id="stock-table">
                <thead>
                    <tr>
                        <th>Current Stocks</th>
                        <th>Quantity</th>
                        <th>Gain/Loss</th>
                        <th>Total Price</th>
                    </tr>
                </thead>
                <tbody id="stocks">
                    <tr>
                        <td><a href="#">AAPL</a></td>
                        <td>10</td>
                        <td>+50</td>
                        <td>$100</td>
                    </tr>
                 
                    {{!-- {{#if user}} --}}
                        {{#each stock}}
                            {{> stocks}}
                        {{/each}}
                    {{!-- {{/if}} --}}
                </tbody>
            </table>

            <div class="card" id="dash-card" style="width: 18rem;">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Net Worth: ${{total}}</li>
                    <li class="list-group-item">Available Cash: ${{available}}</li>
                </ul>
            </div>
            <button class="btn btn-primary" id="buy-btn">Buy stocks</button>
        </div>
        
    </div>
</div>
<script src="/js/dashboard.js"></script> 